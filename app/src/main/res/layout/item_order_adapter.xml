<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/duoChanPinItemRectangleView"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dageiwm_beijingck" />

        <TextView
            android:id="@+id/duoChanPinItemStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textColor="@color/sezhi_argb_FF8B7D"
            android:textSize="11dp"
            tools:text="APPName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dengdai_miaoshu_bg"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/duoChanPinItemRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/duoChanPinItemIv"
                android:layout_width="44dp"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/duoChanPinItemAppTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/sezhi_argb_heise"
                android:textSize="18dp"
                tools:text="APPName" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/huandandanxinxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bj_grerrrrrrr"
            android:paddingVertical="18dp">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/devolucion002Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sezhi_argb_999999"
                    android:textSize="14sp"
                    tools:text="@string/shangpins_foryo_mon2" />

                <TextView
                    android:id="@+id/devolucion002Tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/sezhi_argb_heise"
                    android:textSize="14sp"
                    tools:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/aplicacionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zhuyetab_waitchek_fec2"
                    android:textColor="@color/sezhi_argb_999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/aplicacionTv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/sezhi_argb_heise"
                    android:textSize="14sp"
                    tools:text="30–11-2020" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/jflsdjlhint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text=""
            android:textColor="#ff333333"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone"
            android:textSize="12sp"
            />


        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp"
            android:background="@drawable/bj_grerrrrrrr">

            <ImageView
                android:id="@+id/tipWaringIv"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                tools:src="@mipmap/wudandan_tishilogon" />

            <TextView
                android:id="@+id/layout3_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/tipWaringIv"
                android:textColor="@color/sezhi_argb_FF7B28"
                android:textSize="12dp"
                tools:text="Si hay una situación de vencimiento maliciosa, ¡presentaremos una demanda en su contra a través de los canales legales!" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/bj_jjhgggggg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/sezhi_argb_baise"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="@string/hello_first_fragment" />

            <TextView
                android:id="@+id/btn_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/bj_userallow_yes"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/sezhi_argb_baise"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>