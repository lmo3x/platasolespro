<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/bj_daojishi20"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iPara modificar la información relacionada con la cuenta de recibir el préstamo es necesario que lo haga usted mismo!iCualquiera que le solicite un codigo de verificación e informacion personal es un fraude!"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fjldfdttldgd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hemos enviado un código de verificación a su número de teléfono móvil de inicio de sesión *******1111 para verificar que es usted. "
                android:textColor="#ff333333"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="(El código de verificación es válido por mucho tiempo)"
                android:textColor="#ffe20c2b"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bj_daojishi102"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">


            <EditText
                android:id="@+id/yanzhegnma01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Introduce código de verificación"
                android:textColorHint="#ff888888"
                android:textColor="@color/sezhi_argb_heise"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="12sp" />

<!--            <TextView-->
<!--                android:visibility="gone"-->
<!--                android:id="@+id/huoquotp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center"-->
<!--                android:text="Volver a obtener el \n código de verificación"-->
<!--                android:background="@drawable/bj_thgsdthgsfew"-->
<!--                android:textColor="@color/sezhi_argb_baise"-->
<!--                android:paddingTop="7dp"-->
<!--                android:paddingBottom="7dp"-->
<!--                android:paddingLeft="6dp"-->
<!--                android:paddingRight="6dp"-->
<!--                android:textSize="12sp" />-->

        </LinearLayout>

        <TextView
            android:id="@+id/daojishitext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:text="Volver a obtener 60s"
            android:textColor="@color/sezhi_argb_6C6C6C"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/huoquotp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="right"
            android:text="Volver a obtener el \n código de verificación"
            android:background="@drawable/bj_nbvcsdvfb"
            android:textColor="@color/sezhi_argb_baise"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nonghao_mainbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bj_hgfafesrgfeasrg"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:text="Entregar"
            android:textColor="@color/sezhi_argb_baise"
            android:textSize="16dp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/jinggaotupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:src="@mipmap/erheyiclose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>