<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bj_gnngbfvaeeee"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/tousubg">
            <TextView
                android:id="@+id/wndwtousu_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sezhi_argb_a6000000"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="15dp"
                android:text=""/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wndwtousu_dianhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repy_tousudianhua"
                    android:textColor="@color/sezhi_argb_a6000000"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/wndwtousu_dianhuanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sezhi_argb_a6000000"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/wndwtousu_wangzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repy_tousuwangzhi"
                    android:textColor="@color/sezhi_argb_a6000000"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/wndwtousu_wangzhiurl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sezhi_argb_a6000000"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/wndwtousu_close1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bj_thgsdthgsfew"
            android:gravity="center"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:text="@string/repy_tousuquxiao"
            android:textColor="@color/sezhi_argb_baise"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/wndwtousu_close2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bj_thgsdthgsfew"
            android:gravity="center"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:text="@string/repy_tousujixu"
            android:textColor="@color/sezhi_argb_baise"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>