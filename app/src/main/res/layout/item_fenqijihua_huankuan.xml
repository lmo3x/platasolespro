<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/dfdsg_xz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cbccck1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingBottom="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bj_plan_2"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/devolucion005Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:gravity="right"
                android:textColor="@color/sezhi_argb_333333"
                android:textSize="12sp"
                tools:text="@string/shangpins_foryo_mon2" />


            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/devolucion001Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sezhi_argb_333333"
                    android:textSize="12sp"
                    tools:text="@string/shangpins_foryo_mon2" />

                <TextView
                    android:id="@+id/devolucion001Tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/sezhi_argb_333333"
                    android:textSize="14sp"
                    tools:text="S/1000" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dsfsdfsdflayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sezhi_argb_999999"
                        android:textSize="12sp"
                        android:text="Los de abajo son incluidos：" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sezhi_argb_999999"
                        android:textSize="12sp"
                        android:text="Gasto por demora" />

                    <TextView
                        android:id="@+id/dsfsdfsdflayout001Tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/sezhi_argb_999999"
                        android:textSize="14sp"
                        tools:text="S/1000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dsfsdfsdflayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/sezhi_argb_999999"
                        android:textSize="12sp"
                        android:text="Monto de descuento" />

                    <TextView
                        android:id="@+id/dsfsdfsdflayout002Tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/sezhi_argb_999999"
                        android:textSize="14sp"
                        tools:text="S/1000" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/devolucion002Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sezhi_argb_333333"
                    android:textSize="12sp"
                    tools:text="@string/zhuyetab_waitchek_fec2" />

                <TextView
                    android:id="@+id/devolucion002Tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/sezhi_argb_333333"
                    android:textSize="14sp"
                    tools:text="30–11-2020" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/jklsjfldskjLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bj_plan_1"
            android:paddingHorizontal="15dp"
            android:paddingVertical="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/jklsjfldskjTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>