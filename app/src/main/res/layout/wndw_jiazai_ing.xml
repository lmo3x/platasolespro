<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bj_hgefasrgfeff"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp">
    <!--android:background="@drawable/loading_dialog_style"-->

    <ProgressBar
        android:id="@+id/reg_req_code_gif_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/request_jiazai_donghua" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_req_code_gif_view"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Procesando \nconfidencialmente"
        android:textColor="@color/sezhi_argb_baise"
        android:textSize="13sp" />


</RelativeLayout>
