<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj_gefngxinnmkuadang"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tishigantan"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/tousubg"
        android:padding="15dp">
        <TextView
            android:id="@+id/wndwtousu_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sezhi_argb_heise"
            android:textSize="14sp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="25dp">

        <TextView
            android:id="@+id/quxiaoquxiao_fjdoj_buyaoquan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bj_efawesgrfae"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/shangpins_foryo_can2"
            android:textColor="@color/sezhi_argb_baise"
            android:textSize="20dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/gaoding_sure_djdj_yaogeiwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bj_thgsdthgsfew"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/shangpins_foryo_con"
            android:textColor="@color/sezhi_argb_baise"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>