<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hrgef_jgRRs_fFCfijs223"
    android:layout_width="match_parent"
    android:layout_height="59dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/lstryry_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/useimg_hgfsrgfaef" />

        <TextView
            android:id="@+id/lstryry_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/str_canal_pago_1_IV"
            android:layout_weight="1"
            android:text="@string/zhuyetab_ryingzhong_can"
            android:textColor="@color/sezhi_argb_heise"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstryry_rybtn"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/bj_userallow_yes"
            android:gravity="center"
            android:text="@string/zhuyetab_ryingzhong_pag2"
            android:textColor="@color/sezhi_argb_baise"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>