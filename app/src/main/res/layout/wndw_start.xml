<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userallowpower"
    android:orientation="vertical">

    <TextView
        android:id="@+id/readDataTopText02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:text="@string/quanxianbiaotixixnxin"
        android:textColor="@color/sezhi_argb_E20C2B"
        android:textSize="18dp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="14dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/jieShouw_fhfj_Qxhjofjxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></TextView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/userallowpower_bottombtnbg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/userallowtipicon"/>
            <TextView
                android:id="@+id/maiso_des_opppp_wenan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/qxppp_usestr_dianjijixu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:baselineAligned="false"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/quxiaoquxiao_fjdoj_buyaoquan"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bj_userallow_no"
                android:gravity="center"
                android:text="@string/gaozhanghao_pagewenan_saltar"
                android:textColor="@color/sezhi_argb_baise"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:layout_width="15dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/gaoding_sure_djdj_yaogeiwo"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bj_userallow_yes"
                android:gravity="center"
                android:text="@string/gaozhanghao_pagewenan_jixu"
                android:textColor="@color/sezhi_argb_baise"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>